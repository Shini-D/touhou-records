---
import { Image } from 'astro:assets';
import heroImage from '@/assets/hero.webp';
import * as Texts from '@/assets/common.json';

const locale = (Astro.currentLocale as "en" | "es") || "en";
const texts = Texts[locale];
---

<section class="relative w-full min-h-svh lg:min-h-[80svh] flex justify-center items-center px-7 pt-16">
  <Image src={heroImage} alt="background" class="absolute top-0 left-0 w-full h-full object-cover" />
  <div class="absolute top-0 left-0 w-full h-full opacity-60 bg-linear-[to_top,var(--color-primary-100),#000_20%,rgba(0,0,0,0.8)_60%,rgba(0,0,0,0)]" />
  <div class="relative text-center text-light drop-shadow-md">
    <h1 class="font-heading font-extrabold leading-tight text-3xl sm:text-5xl lg:text-7xl mb-2 lg:mb-4 en:max-w-[16ch] es:max-w-[20ch] mx-auto">{texts.heroTitle}</h1>
    <p class="sm:text-lg lg:text-2xl">{texts.heroSubtitle}</p>
  </div>
</section>
